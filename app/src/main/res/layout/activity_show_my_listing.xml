<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/linearLayoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- Contenedor CardView para imagen redonda -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop">  <!-- Margen para separar del texto -->

                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/imagen_del_animal_que_se_da_en_adopci_n"
                        android:scaleType="centerCrop"
                        android:src="@color/primarytwo" />  <!-- imagen -->

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/NameCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintStart_toEndOf="@+id/card"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre_animal"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/ciudad" />

                    <TextView
                        android:id="@+id/txtSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sexo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/NameCard"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop">

                    <TextView
                        android:id="@+id/tvSpecies"
                        android:layout_margin="20dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/especie" />
                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableanimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="35dp"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_marginBottom="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCard">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewBirthdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:paddingStart="30dp"
                        android:paddingEnd="0dp"
                        android:text="@string/a_o_de_nacimiento"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewAnimalBirthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="0dp"
                            android:gravity="start"
                            android:text="01-02-2020" />

                        <TextView
                            android:id="@+id/textViewEstimatedBirthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:visibility="gone"
                            android:gravity="start"
                            android:text="@string/aproximadamente" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingStart="30dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="0dp"
                        android:text="@string/tama_o"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAnimalSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/cm" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingStart="30dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="0dp"
                        android:text="@string/descripci_n"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAnimalDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="30dp"
                        android:layout_marginStart="20dp"
                        android:singleLine="false"
                        android:maxLines="10"
                        android:gravity="start"
                        android:paddingBottom="20dp"
                        android:text="@string/es_un_animal_muy_bueno" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRowAnimalMicroNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textViewMicroNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingStart="30dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="0dp"
                        android:text="Número de microchip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAnimalMicroNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="000000000" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewNeutered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingStart="30dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="0dp"
                        android:text="@string/esterilizado"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAnimalNeutered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/s_no" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/layTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/tableDatos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tableanimal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:text="Etiquetas"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/listTags"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewNeutered" />

                <com.example.animor.Utils.NonScrollListView
                    android:id="@+id/listTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="60dp"
                    android:background="@drawable/border"
                    app:layout_constraintTop_toBottomOf="@id/tvTags"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <TableLayout
                android:id="@+id/tableDatos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                android:shrinkColumns="1"
                app:layout_constraintTop_toBottomOf="@+id/layTags"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="16dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contacto"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_span="2"
                        android:gravity="start" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Teléfono:"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Teléfono"
                        android:textStyle="normal"
                        android:gravity="start" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Email:"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="email"
                        android:textStyle="normal"
                        android:gravity="start" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ubicación"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_span="2"
                        android:gravity="start" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Ciudad:"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Ciudad"
                        android:textStyle="normal"
                        android:gravity="start" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Provincia:"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvProvince"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Provincia"
                        android:textStyle="normal"
                        android:gravity="start" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="País:"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvCountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="País"
                        android:textStyle="normal"
                        android:gravity="start" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchadop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_span="2"
                    android:switchPadding="10dp"
                    android:text="@string/adoptado"
                    android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:id="@+id/linbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tableDatos"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/btnedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="Editar" />

                <Button
                    android:id="@+id/btndel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="Borrar" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
