<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen del animal -->
        <LinearLayout
            android:id="@+id/layoutcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">  <!-- Margen para separar del texto -->
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/imagen_del_animal"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gatoinicio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:text="Añade una fotografía"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSeleccionarImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:text="Seleccionar imagen" />
            </LinearLayout>
        </LinearLayout>

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:hint="Nombre"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutcard" />

        <!-- Fecha nacimiento -->
        <TextView
            android:id="@+id/textViewEspecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especie"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etNombre"
            app:layout_constraintBottom_toTopOf="@id/spinnerSpecies"/>

        <Spinner
            android:id="@+id/spinnerSpecies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/btn_dropdown"
            android:prompt="@string/selecciona_opcion"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewEspecie" />

        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Fecha de nacimiento"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@id/spinnerSpecies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Nacimiento aproximado -->
        <CheckBox
            android:id="@+id/cbNacimientoAproximado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Es una fecha aproximada?"
            app:layout_constraintTop_toBottomOf="@id/etFechaNacimiento"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Sexo -->

        <TextView
            android:id="@+id/tvSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="Sexo"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/rgSexo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbNacimientoAproximado" />

        <RadioGroup
            android:id="@+id/rgSexo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/rbMacho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macho" />

            <RadioButton
                android:id="@+id/rbHembra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hembra" />

            <RadioButton
                android:id="@+id/rbDesconocido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desconocido" />
        </RadioGroup>

        <!-- Tamaño -->
        <EditText
            android:id="@+id/etTamano"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Tamaño (ej. 25kg, grande)"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/rgSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Descripción -->
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top|start"
            app:layout_constraintTop_toBottomOf="@id/etTamano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Castrado -->
        <CheckBox
            android:id="@+id/cbCastrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Castrado?"
            app:layout_constraintTop_toBottomOf="@id/etDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Microchip -->
        <EditText
            android:id="@+id/etMicrochip"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="N.º de microchip (opcional)"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/cbCastrado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/tvTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="Etiquetas"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/listTags"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etMicrochip" />

        <com.example.animor.Utils.NonScrollListView
            android:id="@+id/listTags"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            tools:layout_editor_absoluteY="60dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@id/tvTags"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:choiceMode="multipleChoice"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Guardar animal"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listTags"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonSave">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>