<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título fijo en la parte superior -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_title_background"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:text="MIS ANIMALES"
        android:textColor="@color/primarytwo"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMyAnimals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fragment_recycler_background"
        android:clipToPadding="false"
        android:contentDescription="@string/lista_de_mis_animales"
        android:elevation="2dp"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />

    <!-- Layout para usuario no logueado - Centrado en pantalla -->
    <LinearLayout
        android:id="@+id/layoutNoLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/empty_state_background"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitulo">

        <!-- Ícono de estado no logueado -->
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/empty_state_icon_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="🔒"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textViewNoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Usuario no logueado.\nIntroduce tu usuario"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnIniciarSesion"
            style="@style/ModernPrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@drawable/primary_button_background"
            android:elevation="4dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Iniciar sesión"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>