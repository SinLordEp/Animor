<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subtle_gradient_background"
    android:fitsSystemWindows="true">

    <!-- Contenedor principal con card moderno -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/login_card_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo con contenedor circular -->
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/logo_container_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerInside"
                android:src="@drawable/logoanimor" />
        </LinearLayout>

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Inicia sesión"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Usa tu cuenta de Google"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- Botón de Google Sign-In moderno -->
        <Button
            android:id="@+id/btn_google_sign_in"
            style="@style/ModernPrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/primary_button_background"
            android:elevation="4dp"
            android:text="Iniciar con Google"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Botón secundario -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/secondary_button_background"
            android:clickable="true"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/o_contin_a_sin_iniciar_sesi_n"
            android:textColor="@color/primarytwo"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Texto de términos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Al continuar, aceptas nuestros Términos y Condiciones"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>